{
  "name": "mjml-server",
  "version": "1.0.0",
  "description": "MJML Rendering Server - Production ready Fastify API",
  "type": "module",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "ava --timeout=30s",
    "test:watch": "ava --watch --timeout=30s",
    "test:verbose": "ava --verbose --timeout=30s",
    "test:ci": "ava --timeout=30s --tap",
    "test:coverage": "c8 ava --timeout=30s"
  },
  "keywords": [
    "mjml",
    "email",
    "rendering",
    "fastify",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "fastify": "^5.6.1",
    "mjml": "^4.16.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2"
  },
  "devDependencies": {
    "ava": "^6.4.1",
    "c8": "^10.1.3",
    "got": "^14.6.1"
  }
}
